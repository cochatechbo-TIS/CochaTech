<?xml version="1.0"?>
<ruleset name="CochaTech Coding Standards">
    <description>Coding standards for CochaTech project</description>
    <file>app</file>
    <file>tests</file>
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <rule ref="PSR12"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
